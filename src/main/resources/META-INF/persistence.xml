<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="designPatternsUnit" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>designPatterns.domain.observer.ConcreteSubject</class>
		<class>designPatterns.domain.adapter.Adaptee</class>
		<class>designPatterns.domain.singleton.Singleton</class>
		<class>designPatterns.domain.bridge.RefinedAbstraction</class>
		<class>designPatterns.domain.observer.ConcreteObserver</class>
		<class>designPatterns.domain.factory.Product</class>
		<class>designPatterns.domain.state.StateA</class>
		<class>designPatterns.domain.bridge.Abstraction</class>
		<class>designPatterns.domain.factory.CreatorImpl</class>
		<class>designPatterns.domain.adapter.Client</class>
		<class>designPatterns.domain.bridge.ConcreteImplementor</class>
		<class>designPatterns.domain.adapter.AdapterImpl</class>
		<class>designPatterns.domain.state.Context</class>
		<class>designPatterns.domain.state.StateB</class>
		
		<properties>
	      <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
	      <property name="hibernate.connection.url" value="jdbc:hsqldb:mem:spring"/>
	      <property name="hibernate.connection.driver_class" value="org.hsqldb.jdbcDriver"/>
	      <property name="hibernate.connection.username" value="sa"/>
	      <property name="hibernate.connection.password" value=""/>
	      <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
    	</properties>
	</persistence-unit>
</persistence>

